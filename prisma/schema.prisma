datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Area {
  id       Int       @id @default(autoincrement())
  district String
  properties Property[]
}

model Property {
  id          Int      @id @default(autoincrement())
  name        String
  shortName   String
  description String
  price       Int
  img         Json
  bedrooms    Int
  roomType    RoomType
  areaId      Int
  area        Area     @relation(fields: [areaId], references: [id])
}

enum RoomType {
  SALE
  RENT
}
