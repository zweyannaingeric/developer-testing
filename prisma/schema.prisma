generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Area {
  id Int @id @default(autoincrement())
  name String @unique
  properties Property[] @relation("AreaProperties")
}

model Property {
  id    Int     @id @default(autoincrement())
  name  String
  shortName String
  type     String       
  place   Area?   @relation("AreaProperties", fields: [placeId], references: [name])
  placeId String
  price Int
  bedroom Int
  description String
  img String
}
